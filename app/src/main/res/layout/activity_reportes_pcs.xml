<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.progland.labuna.ReportesPCSActivity">


    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/widget0"
        android:layout_width="fill_parent"
        android:layout_height="513dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_x="90dp"
            android:layout_y="412dp"
            app:srcCompat="@mipmap/labs" />

        <TextView
            android:id="@+id/txtvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="49dp"
            android:layout_y="16dp"
            android:text="Complete los siguientes Campos"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/widget44"
            android:layout_width="303dp"
            android:layout_height="265dp"
            android:layout_x="53dp"
            android:layout_y="67dp"
            android:background="@android:color/background_light">

            <TextView
                android:id="@+id/txtvnumlabs"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edCantidadPCSLab"
                android:text="Codigo de LAB" />

            <EditText
                android:id="@+id/edEstadoLabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edCantidadPCSLab"
                android:layout_below="@+id/edCantidadPCSLab"
                android:paddingRight="100dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edCantidadPCSLab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edCodigoLAB"
                android:layout_toRightOf="@+id/txtvnNombreArticu"
                android:paddingRight="100dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edDetalleLAB"
                android:layout_alignLeft="@+id/txtvnNombreArticu"
                android:text="Detalle" />

            <EditText
                android:id="@+id/edDetalleLAB"
                android:layout_width="153dp"
                android:layout_height="115dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/edEstadoLabs"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtvCodigoArticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edCodigoLAB"
                android:text="Codigo del Articulo" />

            <EditText
                android:id="@+id/edCodigoLAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txtvnNombreArticu"
                android:paddingRight="100dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtvnNombreArticu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Nombre del Articulo" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnreportar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="110dp"
            android:layout_height="59dp"
            android:layout_x="243dp"
            android:layout_y="350dp"
            android:text="Reportar" />

        <Button
            android:id="@+id/btnvercomputadora"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_x="57dp"
            android:layout_y="353dp"
            android:text="Ver Reportes" />
    </AbsoluteLayout>


</android.support.constraint.ConstraintLayout>
