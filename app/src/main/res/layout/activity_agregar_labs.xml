<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.progland.labuna.AgregarLABSActivity">


    <AbsoluteLayout
        android:id="@+id/widget0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/txtvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete los siguientes Campos"
            android:layout_x="52dp"
            android:layout_y="23dp" />
        <RelativeLayout
            android:id="@+id/widget44"
            android:layout_width="wrap_content"
            android:layout_height="298dp"
            android:layout_x="21dp"
            android:layout_y="55dp">

            <TextView
                android:id="@+id/lbEstadoLab"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/edEstadoLabs"
                android:text="Estado" />

            <EditText
                android:id="@+id/edEstadoLabs"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edCantidadPCSLab"
                android:layout_below="@+id/edCantidadPCSLab"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edCantidadPCSLab"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edCodigoLAB"
                android:layout_toRightOf="@+id/txtvCantidadpc"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalle"
                android:layout_alignBaseline="@+id/edDetalleLAB"
                android:layout_alignLeft="@+id/txtvCantidadpc" />

            <EditText
                android:id="@+id/edDetalleLAB"
                android:layout_width="400px"
                android:layout_height="115dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/edEstadoLabs"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtvCantidadpc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edCodigoLAB"
                android:text="Cantidad de PC" />

            <EditText
                android:id="@+id/edCodigoLAB"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txtvCantidadpc"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtvCantidadpc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Codigo del LAB" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnagregarLABS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="228dp"
            android:layout_y="361dp"
            android:text="Agregar" />

        <Button
            android:id="@+id/btnverlabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="32dp"
            android:layout_y="360dp"
            android:text="Ver Labs"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="352dp" />
    </AbsoluteLayout>


</android.support.constraint.ConstraintLayout>
